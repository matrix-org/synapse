{
  "apps": {
    "http": {
      "servers": {
        "srv0": {
          "listen": [
            ":8448"
          ],
          "routes": [
            {
              "match": [
                {
                  "host": [
                    "{{ server_name }}"
                  ]
                }
              ],
              "handle": [
                {
                  "handler": "subroute",
                  "routes": [
                    {
                      "handle": [
                        {
                          "handler": "reverse_proxy",
                          "upstreams": [
                            {
                              "dial": "localhost:80"
                            }
                          ]
                        }
                      ]
                    }
                  ]
                }
              ],
              "terminal": true
            }
          ]
        }
      }
    },
    "tls": {
      "automation": {
        "policies": [
          {
            "subjects": [
              "{{ server_name }}"
            ],
            "issuers": [
              {
                "module": "internal"
              }
            ],
            "on_demand": true
          }
        ]
      }
    },
    "pki": {
      "certificate_authorities": {
        "local": {
          "name": "Complement CA",
          "root": {
            "certificate": "/ca/ca.crt",
            "private_key": "/ca/ca.key"
          },
          "intermediate": {
            "certificate": "/ca/ca.crt",
            "private_key": "/ca/ca.key"
          }
        }
      }
    }
  }
}
